<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="controllers.SignupController"
      alignment="CENTER"
      spacing="10"
      prefWidth="400" prefHeight="380"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed); -fx-padding: 40;">

    <Label text="🎬 Đăng ký tài khoản khách hàng"
           style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" />

    <TextField fx:id="txtName" promptText="Họ và tên" prefWidth="260"
               style="-fx-background-radius: 8;" />

    <TextField fx:id="txtEmail" promptText="Email đăng nhập" prefWidth="260"
               style="-fx-background-radius: 8;" />

    <PasswordField fx:id="txtPassword" promptText="Mật khẩu" prefWidth="260"
                   style="-fx-background-radius: 8;" />

    <PasswordField fx:id="txtConfirm" promptText="Nhập lại mật khẩu" prefWidth="260"
                   style="-fx-background-radius: 8;" />

    <Button text="Đăng ký"
            prefWidth="260"
            onAction="#handleSignup"
            style="-fx-background-color: #00b4d8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

    <Label fx:id="lblStatus" textFill="white" style="-fx-font-size: 12;" />

    <Hyperlink text="⬅ Quay lại đăng nhập"
               onAction="#backToLogin"
               style="-fx-text-fill: #f1f1f1;" />

</VBox>
