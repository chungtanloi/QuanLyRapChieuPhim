<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<ScrollPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" style="-fx-padding:16;" fitToWidth="true" prefHeight="200.0" prefWidth="200.0"
                    stylesheets="@styles.css" BorderPane.alignment="CENTER">
            <content>
                <!-- Đặt thẳng VBox làm content; bên trong là 2 GridPane -->
                <VBox fillWidth="true" spacing="20" styleClass="content-area">
                    

                    <!-- Hàng 1: 3 card -->
                    <GridPane hgap="20" vgap="20" maxWidth="Infinity">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33"/>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33"/>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                        </rowConstraints>
                        <children>
                            <StackPane styleClass="stat-card" GridPane.hgrow="ALWAYS" maxWidth="Infinity">
                                <VBox spacing="6" alignment="CENTER">
                                    <Label text="Tổng doanh thu" styleClass="stat-title"/>
                                    <Label text="₫0" fx:id="lblRevenue" styleClass="stat-value"/>
                                </VBox>
                            </StackPane>
                            <StackPane styleClass="stat-card" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity">
                                <VBox spacing="6" alignment="CENTER">
                                    <Label text="Vé bán ra" styleClass="stat-title"/>
                                    <Label text="0" fx:id="lblTickets" styleClass="stat-value"/>
                                </VBox>
                            </StackPane>
                            <StackPane styleClass="stat-card" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" maxWidth="Infinity">
                                <VBox spacing="6" alignment="CENTER">
                                    <Label text="Tỉ lệ lấp đầy" styleClass="stat-title"/>
                                    <Label text="0%" fx:id="lblOccupancy" styleClass="stat-value"/>
                                </VBox>
                            </StackPane>
                        </children>
                    </GridPane>

                    <!-- Hàng 2: Biểu đồ 60/40 -->
                    <GridPane hgap="20" vgap="20" maxWidth="Infinity">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="60"/>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="40"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                        </rowConstraints>
                        <children>
                            <StackPane styleClass="chart-card" GridPane.hgrow="ALWAYS" maxWidth="Infinity">
                                <VBox spacing="8">
                                    <Label text="Doanh thu 7 ngày gần nhất" styleClass="chart-title"/>
                                    <Region styleClass="chart-placeholder" prefHeight="260" maxWidth="Infinity"/>
                                </VBox>
                            </StackPane>

                            <StackPane styleClass="chart-card" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity">
                                <VBox spacing="8">
                                    <Label text="Doanh thu theo phim" styleClass="chart-title"/>
                                    <Region styleClass="chart-placeholder" prefHeight="260" maxWidth="Infinity"/>
                                </VBox>
                            </StackPane>
                        </children>
                    </GridPane>
                </VBox>
            </content>
        </ScrollPane>
