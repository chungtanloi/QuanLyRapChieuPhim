<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Hyperlink?>

<VBox fx:controller="controllers.LoginController"
      alignment="CENTER"
      spacing="12"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="400" prefHeight="300"
      style="-fx-background-color: linear-gradient(to bottom right, #2b5876, #4e4376); -fx-padding: 40;">

    <Label text="🎬 Quản Lý Rạp Chiếu Phim"
           style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />

    <TextField fx:id="txtEmail" promptText="Email đăng nhập"
               prefWidth="250" style="-fx-background-radius: 8;" />

    <PasswordField fx:id="txtPassword" promptText="Mật khẩu"
                   prefWidth="250" style="-fx-background-radius: 8;" />

    <Button text="Đăng nhập"
            fx:id="btnLogin"
            prefWidth="250"
            style="-fx-background-color: #00b4d8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
            onAction="#handleLogin"/>

    <Label fx:id="lblStatus" textFill="white" style="-fx-font-size: 12;" />

 
    <Hyperlink text="Chưa có tài khoản? Đăng ký ngay"
               onAction="#openSignup"
               style="-fx-text-fill: white;" />
</VBox>
